<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>de.fhdo.ddmm.service.intermediate</groupId>
    <version>0.0.1-SNAPSHOT</version>
    <artifactId>de.fhdo.ddmm.service.intermediate.metamodels</artifactId>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>

        <build-helper-maven-plugin-version>3.0.0</build-helper-maven-plugin-version>
        <data-metamodel-version>0.0.1-SNAPSHOT</data-metamodel-version>
        <ecore-xcore-lib-version>1.1.100</ecore-xcore-lib-version>
        <emf-version>2.12.0</emf-version>
        <maven-assembly-plugin-version>3.1.0</maven-assembly-plugin-version>
        <maven-compiler-plugin-version>3.8.0</maven-compiler-plugin-version>
        <service-metamodel-version>0.0.1-SNAPSHOT</service-metamodel-version>
        <technology-metamodel-version>0.0.1-SNAPSHOT</technology-metamodel-version>
        <utils-version>0.0.1-SNAPSHOT</utils-version>
        <xtext-version>2.12.0</xtext-version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.eclipse.emf</groupId>
            <artifactId>org.eclipse.emf.common</artifactId>
            <version>${emf-version}</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.emf</groupId>
            <artifactId>org.eclipse.emf.ecore</artifactId>
            <version>${emf-version}</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.xtext</groupId>
            <artifactId>org.eclipse.xtext.xbase.lib</artifactId>
            <version>${xtext-version}</version>
        </dependency>
        <dependency>
            <groupId>org.eclipse.emf</groupId>
            <artifactId>org.eclipse.emf.ecore.xcore.lib</artifactId>
            <version>${ecore-xcore-lib-version}</version>
        </dependency>
        <dependency>
            <groupId>de.fhdo.ddmm.data</groupId>
            <artifactId>de.fhdo.ddmm.data.metamodel</artifactId>
            <version>${data-metamodel-version}</version>
        </dependency>
        <dependency>
            <groupId>de.fhdo.ddmm.service</groupId>
            <artifactId>de.fhdo.ddmm.service.metamodel</artifactId>
            <version>${service-metamodel-version}</version>
        </dependency>
        <dependency>
            <groupId>de.fhdo.ddmm.technology</groupId>
            <artifactId>de.fhdo.ddmm.technology.metamodel</artifactId>
            <version>${technology-metamodel-version}</version>
        </dependency>
        <dependency>
            <groupId>de.fhdo.ddmm.utils</groupId>
            <artifactId>de.fhdo.ddmm.utils</artifactId>
            <version>${utils-version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>${build-helper-maven-plugin-version}</version>
                <executions>
                  <execution>
                    <id>add-source</id>
                    <phase>generate-sources</phase>
                    <goals>
                      <goal>add-source</goal>
                    </goals>
                    <configuration>
                      <sources>
                        <source>src-gen/</source>
                      </sources>
                    </configuration>
                  </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin-version}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>${maven-assembly-plugin-version}</version>
                <configuration>
                    <descriptors>
                        <descriptor>src/assembly/metamodels.xml</descriptor>
                    </descriptors>
                </configuration>
                <executions>
                    <execution>
                        <id>assemble-all</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>